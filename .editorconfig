# EditorConfig helps maintain consistent coding styles across editors and IDEs
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown files (preserve trailing spaces for line breaks)
[*.md]
trim_trailing_whitespace = false

# TypeScript/JavaScript
[*.{js,ts,tsx,jsx}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# TOML
[*.toml]
indent_size = 2

# Makefiles (require tabs)
[Makefile]
indent_style = tab

# Windows batch/cmd files
[*.{bat,cmd}]
end_of_line = crlf
